                        <td hidden><input name="_IdPedido" value="@pedido.Nro"></td>
                        <td>@pedido.Nro</td>
                        <td>@pedido.Cliente.Nombre</td>
                        <td>@pedido.Cliente.Direccion</td>
                        <td>@pedido.Obs</td>
                        <td>@pedido.Estado</td>

