@model Cadeteria.ViewModels.AltaPedidoViewModel

@{
    ViewData["Title"] = "AltaPedido";
}

<h1>AltaPedido</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CargarPedido">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div hidden>
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <input asp-for="Obs" class="form-control" />
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-check">
                <h6>Estado del Pedido</h6>
                <input type="radio" value="0" asp-for="EstadoPedido" class="form-check-input">
                <label asp-for="EstadoPedido" class="control-label">Entregado</label>
                <input type="radio" value="1" asp-for="EstadoPedido" class="form-check-input">
                <label asp-for="EstadoPedido" class="control-label">En Proceso</label>
                <input type="radio" value="2" asp-for="EstadoPedido" class="form-check-input">
                <label asp-for="EstadoPedido" class="control-label">Cancelado</label>
                <span asp-validation-for="EstadoPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select name="CadeteID" id="CadeteID">
                    @foreach (var Cadete in Model.ListaCadetes)
                    {
                        <option value="@Cadete.Id">@Cadete.Nombre</option>
                    }
                </select>
            </div>
            <div>
                <select name="ClienteID" id="ClienteID">
                    @foreach (var Cliente in Model.ListaClientes)
                    {
                        <option value="@Cliente.Id">@Cliente.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
