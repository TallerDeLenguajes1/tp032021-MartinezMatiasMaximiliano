@model Cadeteria.ViewModels.ListaClientesViewModel

@{
    ViewData["Title"] = "ListaClientes";
}

<h1>ListaClientes</h1>
<p>
    <a asp-action="AltaCliente" asp-controller="Cliente">Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID cliente
            </th>
            <th>
                Nombre
            </th>
            <th>
                Direccion
            </th>
            <th>
                Telefono
            </th>
            <th>
                Editar|Borrar
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.listaClientes) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarCliente", new { Id = item.Id}) |
                @Html.ActionLink("Borrar", "BajaCliente", new { Id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
