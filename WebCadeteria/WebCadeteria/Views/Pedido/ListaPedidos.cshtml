@{
    ViewData["Title"] = "ListaPedidos";
}

@model WebCadeteria.Entities.Cadeteria

<div>
    <div class="text-center">
        <h1 class="display-4">Lista de Pedidos</h1>
        <form  method="post">
            <table class="table table-striped">
                <tr>
                    <th scope="col">Nº de Pedido</th>
                    <th scope="col">Nombre del Cliente</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Observacion</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Cadete Asignado</th>
                    <th scope="col">Reasignar Cadete</th>
                    <th scope="col">Reasignar?</th>
                </tr>

                @foreach (var pedido in Model.ListaPedidos)
