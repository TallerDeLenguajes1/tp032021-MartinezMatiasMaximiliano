@model Cadeteria.ViewModels.PedidoViewModel


<h1>AltaPedido</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ModificarPedido">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Obs" class="control-label"></label>
                <input asp-for="Obs" class="form-control" />
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-check">
                <h6>Estado del Pedido</h6>
                <select asp-for="EstadoPedido" class="form-select">
                    <option selected>Open this select menu</option>
                    <option value="0">Entregado</option>
                    <option value="1">En Proceso</option>
                    <option value="2">Cancelado</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
