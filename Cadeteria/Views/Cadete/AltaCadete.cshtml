@model Cadeteria.Entities.Cadete
    @{
        ViewData["Title"] = "AltaCadete";
    }

    <h1>Create</h1>

    <h4>Cadete</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CargarCadete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input type="text" asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input type="text" asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input type="text" asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vehiculo" class="control-label"></label>
                    <select asp-for="Vehiculo" class="form-control">
                        <option value="0">Bicicleta</option>
                        <option value="1">Auto</option>
                        <option value="2">Moto</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="ListaCadetes">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
