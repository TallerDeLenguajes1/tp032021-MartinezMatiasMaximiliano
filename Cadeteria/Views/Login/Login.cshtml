@model bool
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row">
        <div class="col">
        <form asp-action="Login" asp-controller="Login" method="post" class="row g-3">
            <h4>Ingreso de usuarios</h4>
            <div class="col-12">
                <label>Usuario</label>
                <input type="text" name="username" class="form-control" placeholder="Usuario" required>
            </div>
            <div class="col-12">
                <label>Contraseña</label>
                <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark float-end">Login</button>
                @if(!Model){
                    <p>Usuario o Contraseña incorrectos</p>
                }
            </div>
        </form>
    <!-- Bootstrap JS -->
    <script src="https://www.markuptag.com/bootstrap/5/js/bootstrap.bundle.min.js"></script>
    </div>
    <div class="col">
        <form asp-action="SearchPedidos" asp-controller="Pedido" method="post" class="row g-3">
            <h4>Busqueda de pedidos</h4>
            <div class="col-12">
                <label>Buscar Pedidos</label>
                <input type="text" name="username" class="form-control" placeholder="Nombre del Cliente" required>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-dark float-end">Search</button>
            </div>
        </form>
    </div>
</div>
</div>

